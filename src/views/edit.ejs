<%- include("partials/header.ejs") %>
<header
  class="bg-stone-700 px-6 text-slate-50 py-6 border-b-2 border-slate-50 tracking-widest"
>
  <nav class="flex justify-between">
    <div class="px-3 py-2 font-semibold">Super simple board app</div>
    <div class="mx-0 ml-5">
      <button
        class="tracking-wider ml-4 bg-transparent hover:bg-stone-200 text-slate-50 hover:text-stone-500 py-2 px-4 border border-slate-50 hover:border-transparent rounded transition delay-150;"
      >
        <a href="/">Logout</a>
      </button>
    </div>
  </nav>
</header>

<div class="bg-stone-800 min-h-screen tracking-widest">
  <div
    class="flex flex-col items-center justify-center px-6 py-4 mx-auto md:h-screen lg:py-0"
  >
    <div
      class="flex items-center mb-6 text-4xl font-semibold ext-white text-slate-50"
    >
      <h1>Update a record</h1>
    </div>
    <div
      class="w-full rounded-lg shadow md:mt-0 sm:max-w-md xl:p-0 bg-neutral-200"
    >
      <div class="p-8 space-y-4 md:space-y-6 sm:p-8">
        <form
          class="space-y-4 md:space-y-6"
          action="/blogs/edit/<%= model.Blog_ID %>"
          method="post"
        >
          <div class="items-center py-2">
            <div class="border-b border-gray-800 pt-5">
              <label
                for="Title"
                class="block mb-2 text-sm font-medium text-gray-900"
                >Title</label
              >
              <input
                autofocus
                name="Title"
                value="<%= model.Title %>"
                class="font-sans appearance-none bg-transparent border-none w-full text-gray-700 mr-3 py-1 px-2 leading-tight focus:outline-none"
              />
            </div>

            <div class="border-b border-gray-800 pt-5">
              <label
                for="Article"
                class="block mb-2 text-sm font-medium text-gray-900"
                >Description</label
              >

              <input
                autofocus
                name="Article"
                value="<%= model.Article %>"
                class="font-sans appearance-none bg-transparent border-none w-full text-gray-700 mr-3 py-1 px-2 leading-tight focus:outline-none"
              />
            </div>

            <div class="mt-5">
              <div
                class="flex items-center justify-center mt-7 bg-transparent hover:bg-rose-300 text-rose-300 hover:text-slate-50 py-2 px-4 border border-rose-300 rounded transition delay-150"
              >
                <input type="submit" value="Edit" />
              </div>
              <div
                class="flex items-center justify-center mt-7 bg-transparent hover:bg-stone-500 text-stone-500 hover:text-stone-50 py-2 px-4 border border-stone-500 hover:border-stone-500 rounded transition delay-150"
              >
                <a href="/blogs/all">Cancel</a>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
<%- include("partials/footer.ejs") %>
