<%- include("partials/header.ejs") %>

<div class="bg-stone-700 h-screen tracking-widest">
  <div
    class="flex flex-col items-center justify-center px-6 py-8 mx-auto md:h-screen lg:py-0"
  >
    <h2
      class="flex items-center mb-6 text-3xl font-semibold ext-white text-slate-50"
    >
      Sign Up
    </h2>
    <div
      class="w-full rounded-lg shadow md:mt-0 sm:max-w-md xl:p-0 bg-neutral-200"
    >
      <div class="p-8 space-y-4 md:space-y-6 sm:p-8">
        <form class="space-y-4 md:space-y-6" action="/register" method="post">
          <div class="items-center border-b border-gray-800 py-2">
            <label
              for="email"
              class="block mb-2 text-sm font-medium text-gray-900"
              >Username</label
            >
            <input
              type="text"
              name="Name"
              placeholder="Enter Username"
              class="appearance-none bg-transparent border-none w-full text-gray-700 mr-3 py-1 px-2 leading-tight focus:outline-none"
            />
          </div>
          <div class="items-center border-b border-gray-800 py-2">
            <label
              for="password"
              class="block mb-2 text-sm font-medium text-gray-900"
              >Password</label
            >

            <input
              type="password"
              name="Pw"
              placeholder="Enter Password"
              class="appearance-none bg-transparent border-none w-full text-gray-700 mr-3 py-1 px-2 leading-tight focus:outline-none"
            />
          </div>
          <div class="flex items-center justify-center">
            <input
              type="submit"
              value="Create"
              class="tracking-wider hover:bg-stone-700 bg-stone-500 hover:text-slate-50 font-semibold text-stone-200 py-2 px-6 border border-slate-50 rounded transition delay-150"
            />
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include("partials/footer.ejs") %>
